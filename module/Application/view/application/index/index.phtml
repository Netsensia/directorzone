<script>

$(document).ready(function() {
	loadTable('L');
});

function loadTable(type)
{
	$('table#directories').find("tr:gt(0)").remove();

	$('table#directories tr:last').after(
		'<tr>' +
		'<td style="text-align:center" colspan="4"><img src="/img/ajax/ajax-loader.gif"></td>' +
		'</tr>'
    );
	
	var url = "/ajax/company/list?type=" + type + "&page=1&size=5";

	$.ajax({
		url: url
	}).done(function(data) {

		$('table#directories').find("tr:gt(0)").remove();
				
		$.each(data.results, function(key, value) {
			if (type == 'L') {
				var url = '/directories/company/' + value.internalId;
				value.name = '<a href="' + url + '">' + value.name + '</a>';
			}
			
			var newRow = '<tr>';
			newRow += '<td>' + value.name + '</td>';
			newRow += '<td>FTSE AIM 100</td>';
			newRow += '<td>1M GBP</td>';
			newRow += '</tr>';
			
    		$('table#directories tr:last').after(newRow);
    	});
	});
}

</script>