    		$('table#companies tr:last').after(
    			'<tr>' +
    			'<td>' + value.number + '</td>' +
    			'<td>' + value.name + '</td>' +
    			'<td>' + value.ceo + '</td>' +
    			'<td>' + value.sector + '</td>' +
    			'</tr>'
    	    );
    	});
	});
});
