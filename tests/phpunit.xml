<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    bootstrap="Bootstrap.php"
    colors="false"
    strict="true"
    syntaxCheck="false"
    verbose="true">
    <testsuite name="Netsensia ZF2 Skeleton">
        <directory>../module/Application/tests/ApplicationTest</directory>
        <directory>../module/Directorzone/tests/DirectorzoneTest</directory>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./../module/Application/src</directory>
            <directory suffix=".php">./../module/Directorzone/src</directory>
        </whitelist>
    </filter>    
</phpunit>
